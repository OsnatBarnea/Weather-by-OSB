{
    "compilerOptions": {
      "target": "ES6",                     
      "lib": ["DOM", "DOM.Iterable", "ESNext"], 
      "allowJs": true,                   
      "skipLibCheck": true,              
      "esModuleInterop": true,           
      "strict": true,                    
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",                
      "moduleResolution": "node",        
      "resolveJsonModule": true,         
      "isolatedModules": true,           
      "jsx": "react-jsx"                 
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }

